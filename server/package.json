{
  "main": "lib/index.js",
  "type": "module",
  "engines": {
    "node": ">=13.2.0"
  },
  "scripts": {
    "clean": "rimraf coverage/ lib/ tsconfig.tsbuildinfo",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prestart": "tsc",
    "start": "nodemon --es-module-specifier-resolution=node --unhandled-rejections=strict --require=source-map-support/register",
    "test": "node --experimental-specifier-resolution=node node_modules/.bin/mocha",
    "test:watch": "npm start node_modules/.bin/mocha",
    "coverage": "c8 npm t",
    "lint": "tslint --project .",
    "eslint": "eslint --fix --max-warnings=0 --ext=.js,.ts src/",
    "flatc": "flatc --ts --short-names -o src/ ../data.fbs",
    "db": "mongod --bind_ip='127.0.0.1' --dbpath=\"${HOME}/.cache/db\"",
    "dbc": "mongo",
    "db6": "mongod --ipv6 --bind_ip='::1' --dbpath=\"${HOME}/.cache/db\"",
    "dbc6": "mongo --ipv6 --host='[::1]'"
  },
  "nodemonConfig": {
    "watch": "lib"
  },
  "mocha": {
    "spec": "lib/__tests__/"
  },
  "c8": {
    "all": true,
    "exclude": [
      "**/__tests__/**",
      "**/*_generated.[jt]s",
      "**/index.[jt]s"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "ignorePatterns": [
      "**/*_generated.[jt]s"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "simple-import-sort"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "project": "tsconfig.json",
      "sourceType": "module"
    },
    "rules": {
      "eqeqeq": [
        1,
        "always",
        {
          "null": "ignore"
        }
      ],
      "quotes": [
        1,
        "single",
        {
          "allowTemplateLiterals": false
        }
      ],
      "simple-import-sort/sort": 1,
      "@typescript-eslint/explicit-member-accessibility": [
        1,
        {
          "accessibility": "no-public"
        }
      ],
      "@typescript-eslint/no-array-constructor": 0,
      "@typescript-eslint/no-unused-vars": [
        0,
        {
          "argsignorepattern": "^_"
        }
      ],
      "@typescript-eslint/promise-function-async": 1,
      "@typescript-eslint/return-await": 1
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/**"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": 0,
          "@typescript-eslint/no-non-null-assertion": 0
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "useTabs": true
  },
  "dependencies": {
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "flatbuffers": "^1.12.0",
    "form-data": "^3.0.0",
    "inversify": "^5.0.1",
    "loglevel": "^1.6.7",
    "mongodb": "^3.5.5",
    "multer": "^1.4.2",
    "nodemon": "^2.0.3",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/express": "^4.17.6",
    "@types/flatbuffers": "^1.10.0",
    "@types/mocha": "^7.0.2",
    "@types/mongodb": "^3.5.6",
    "@types/multer": "^1.4.2",
    "@types/sinon": "^9.0.0",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "c8": "^7.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "mocha": "^7.1.1",
    "npm-check-updates": "^4.1.2",
    "portfinder": "^1.0.25",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  }
}
