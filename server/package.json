{
  "main": "lib/index.js",
  "type": "module",
  "engines": {
    "node": ">=13.2.0"
  },
  "scripts": {
    "start": "nodemon --es-module-specifier-resolution=node",
    "clean": "rimraf coverage/ lib/ tsconfig.tsbuildinfo",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "node --es-module-specifier-resolution=node node_modules/.bin/mocha",
    "coverage": "c8 npm t",
    "lint": "eslint --max-warnings 0 --fix --ext .js,.ts src/",
    "flatc": "flatc --ts --short-names -o src/ ../data.fbs"
  },
  "nodemonConfig": {
    "watch": "lib"
  },
  "mocha": {
    "spec": "lib/__tests__/"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "ignorePatterns": "**/*_generated.[jt]s",
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        0,
        {
          "argsignorepattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "useTabs": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "express": "^4.17.1",
    "flatbuffers": "^1.11.0",
    "inversify": "^5.0.1",
    "nodemon": "^2.0.2",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/chai": "^4.2.8",
    "@types/express": "^4.17.2",
    "@types/flatbuffers": "^1.10.0",
    "@types/mocha": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "c8": "^7.0.1",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "mocha": "7.0.0-esm1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.1",
    "typescript": "^3.7.5"
  }
}
