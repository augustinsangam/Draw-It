{
  "name": "log2990-server",
  "version": "0.0.0-development",
  "license": "ISC",
  "author": "Issam Maghni <me@concati.me>",
  "contributors": [
    "Samba Bal",
    "Hubert Grootenboer",
    "Eya-Tom Augustin Sangam",
    "Nicolas Verbaere",
    "Mathurin"
  ],
  "main": "lib/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/francafrique/log2990.git"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "nodemon --es-module-specifier-resolution=node",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "echo nop",
    "coverage": "echo not yet",
    "lint": "eslint --max-warnings 0 --fix --ext .js,.ts src/"
  },
  "nodemonConfig": {
    "watch": "lib"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "ignorePatterns": "**/*_generated.[jt]s",
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        0,
        {
          "argsignorepattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "useTabs": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "nodemon": "^2.0.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  }
}
